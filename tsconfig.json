{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/": ["./src"],
      "@/*": ["./src/*"],

      "@/pages": ["./src/pages"],
      "@/pages/*": ["./src/pages/*"],

      "@/widgets": ["./src/widgets"],
      "@/widgets/*": ["./src/widgets/*"],

      "@/shared": ["./src/shared"],
      "@/shared/*": ["./src/shared/*"],

      "@/assets": ["./src/shared/assets"],
      "@/assets/*": ["./src/shared/assets/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "nativewind-env.d.ts", "**/*.d.ts"]
}
